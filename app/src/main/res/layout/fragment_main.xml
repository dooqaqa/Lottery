<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zjf.lottery.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_rock"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/highlighted_border" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/radio_group">

        <RadioButton
            android:text="一等奖"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_first"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:textColorLink="@android:color/holo_orange_light" />

        <RadioButton
            android:text="二等奖"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_second"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColorLink="@android:color/holo_orange_light" />

        <RadioButton
            android:text="三等奖"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_third"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textColorLink="@android:color/holo_orange_light" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_result"
        android:textSize="24sp" />

    <TextView
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_width="match_parent"
        android:textSize="50sp"
        android:id="@+id/text_current"
        android:layout_marginBottom="18dp"
        android:textAlignment="center"
        android:background="@drawable/border"
        android:layout_above="@+id/text_next"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:layout_marginBottom="22dp"
        android:id="@+id/text_next"
        android:layout_above="@+id/text_nextnext"
        android:layout_alignStart="@+id/text_prev" />

    <TextView
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:id="@+id/text_prev"
        android:layout_above="@+id/text_current"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />

    <TextView
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:id="@+id/text_nextnext"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/button_rock"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:id="@+id/text_prevprev"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/text_prev"
        android:layout_alignStart="@+id/text_nextnext" />

</RelativeLayout>
